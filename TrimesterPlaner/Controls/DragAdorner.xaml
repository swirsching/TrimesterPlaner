<UserControl
    x:Class="TrimesterPlaner.Controls.DragAdorner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TrimesterPlaner.Controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="DragAdornerControl"
    d:DataContext="{d:DesignInstance {x:Null}}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <materialDesign:Card
        Padding="10,5"
        materialDesign:BorderBrush="Black"
        materialDesign:BorderThickness="1"
        materialDesign:ElevationAssist.Elevation="Dp6"
        Background="{Binding ElementName=DragAdornerControl, Path=Background}">
        <TextBlock Text="{Binding ElementName=DragAdornerControl, Path=Text}" />
    </materialDesign:Card>
</UserControl>